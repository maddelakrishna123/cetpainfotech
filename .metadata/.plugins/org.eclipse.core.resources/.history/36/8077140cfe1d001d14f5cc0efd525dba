package com.cetpainfotech.day2;

public class Factorial {
	
	// define a method :
	
	// <access-modifier> <modifier>  returntype methodname(<parameters/arguments){ body}
	
	// Access- Modifiers - public(any where ) , private(in same class) , protected(in same package , and related classes), package(inside the same packaess)(No-modifier)
       
   // Modifiers - static , final, abstract , synchronized , default
	
	// returntye -> any primitives (8), String , Any Class Type, any array, nothing (void)
public static void  factorial(int num) // static method
{
	// body 
	
	Factorial f = new Factorial();
f.isEven(34);
	
	int fact = 1;
	
	for(int i =1; i<=num; i++)
	{
		fact*=i;
	}
	
	System.out.println(fact);
	//return fact;
}



public  void display()
{
	isEven(34);
}
public boolean isEven(int num) // instance method
{
	
	factorial(num);
	
	if(num%2==0)
		return true;
	
	return false;
}


}

